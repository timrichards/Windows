<local:LocalWindow x:Class="DoubleFile.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:DoubleFile"
        Title="Double File" MinHeight="250" MinWidth="145" Icon="/Double File;component/Resources/ic_people_black_18dp.png"
        Left="120" Top="20">
    <Grid Name="form_grid">
        <!--IsMainMenu sets content background-->
        <Menu IsMainMenu="True" Grid.ColumnSpan="999" Grid.RowSpan="999"/>
        <StackPanel>
            <Label Content="Double File" HorizontalAlignment="Stretch" HorizontalContentAlignment="Center" Margin="10"/>
            <Button Content="View project" Name ="form_btnViewProject" Width="110" Margin="10,0,10,5"/>
            <Button Content="Open project" Name ="form_btnOpenProject" Width="110" Margin="10,0,10,5"/>
            <Button Content="Save project" Name ="form_btnSaveProject" Width="110" Margin="10,0,10,5"/>
            <Button Content="Search Directories" Name ="form_btnSearchDirLists" Width="110" Margin="10,5,10,5"/>
            <Button Content="Explore Duplicates" Name ="form_btnDuplicateFileExplorer" Width="110" Margin="10,5,10,10"/>
        </StackPanel>
    </Grid>
</local:LocalWindow>
