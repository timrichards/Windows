<local:LocalWindow x:Class="DoubleFile.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:DoubleFile"
        Title="Double File" Height="250" Width="145" Icon="/Double File;component/Resources/ic_people_black_18dp.png"
        Left="120" Top="20">
    <Grid Name="form_grid">
        <Menu IsMainMenu="True" Grid.ColumnSpan="999" Grid.RowSpan="999"/> <!--sets content background-->
        <Label Content="Double File" Width="110" Margin="10,5,0,0" HorizontalAlignment="Left" VerticalAlignment="Top" HorizontalContentAlignment="Center"/>
        <Button Content="View project" Name ="form_btnViewProject" HorizontalAlignment="Left" VerticalAlignment="Top" Width="110" Margin="10,40,0,0"/>
        <Button Content="Open project" Name ="form_btnOpenProject" HorizontalAlignment="Left" Margin="10,70,0,0" VerticalAlignment="Top" Width="110"/>
        <Button Content="Save project" Name ="form_btnSaveProject" HorizontalAlignment="Left" Margin="10,100,0,0" VerticalAlignment="Top" Width="110"/>
        <Button Content="Search Directories" Name ="form_btnSearchDirLists" HorizontalAlignment="Left" Margin="10,135,0,0" VerticalAlignment="Top" Width="110"/>
        <Button Content="Explore Duplicates" Name ="form_btnDuplicateFileExplorer" HorizontalAlignment="Left" Margin="10,170,0,0" VerticalAlignment="Top" Width="110"/>
    </Grid>
</local:LocalWindow>
