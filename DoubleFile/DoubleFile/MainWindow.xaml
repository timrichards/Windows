<local:LocalWindow x:Class="DoubleFile.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:DoubleFile"
        Title="Double File" Height="96" Width="254" Icon="/Double File;component/Resources/ic_people_black_18dp.png"
        Closing="MainWindow_Closing" Left="120" Top="20">
    <Grid Loaded="Grid_Loaded">
        <Menu IsMainMenu="True" Grid.ColumnSpan="999" Grid.RowSpan="999"/>
        <Button Content="View project" HorizontalAlignment="Left" VerticalAlignment="Top" Width="75" Click="Button_ViewProject_Click" Grid.Column="0"/>
        <Button Content="Open project" Grid.Column="0" HorizontalAlignment="Left" Margin="80,0,0,0" Click="Button_OpenProject_Click" VerticalAlignment="Top" Width="75"/>
        <Button Content="Save project" Grid.Column="0" HorizontalAlignment="Left" Margin="160,0,0,0" Click="Button_SaveProject_Click" VerticalAlignment="Top" Width="75"/>
        <Button Content="SearchDirLists" Grid.Column="0" HorizontalAlignment="Left" Margin="0,29,0,0" Click="Button_SearchDirLists_Click" VerticalAlignment="Top" Width="90"/>
        <Button Content="Duplicate File Explorer" Grid.Column="0" HorizontalAlignment="Left" Margin="95,29,0,0" Click="Button_FileHashExplorer_Click" VerticalAlignment="Top" Width="140"/>
    </Grid>
</local:LocalWindow>
