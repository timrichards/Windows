<local:LocalWindowBase x:Class="DoubleFile.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:DoubleFile"
        Title="Double File" MinWidth="145" MinHeight="400"
        Icon="/Double File;component/Assets/ic_people_black_18dp.png"
        Left="120" Top="20">
    <Grid Name="form_grid">
        <!--IsMainMenu sets content background-->
        <Menu IsMainMenu="True" Grid.ColumnSpan="999" Grid.RowSpan="999"/>
        <StackPanel>
            <Label Content="Double File" HorizontalAlignment="Stretch" HorizontalContentAlignment="Center" Margin="10"/>
            <Button Content="View project" Name ="formBtn_ViewProject" Width="110" Margin="10,0,10,5"/>
            <Button Content="Open project" Name ="formBtn_OpenProject" Width="110" Margin="10,0,10,5"/>
            <Button Content="Save project" Name ="formBtn_SaveProject" Width="110" Margin="10,0,10,5"/>
            <Button Content="Explore" Name ="formBtn_DuplicateFileExplorer" Width="110" Margin="10,5,10,10"/>
            <Button Content="Newline" Name ="formBtn_Newline" Width="110" Margin="10,10,10,10"/>
        </StackPanel>
    </Grid>
</local:LocalWindowBase>
