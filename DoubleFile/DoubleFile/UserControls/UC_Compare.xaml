<local:LocalUserControlBase x:Class="DoubleFile.UC_Compare"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:DoubleFile"
        LocalTitle="Compare">
    <Grid>
        <StackPanel>
            <TextBlock Text="{Binding Folder1}"/>
            <Button Command="{Binding Icmd_Pick}" Content="Pick"/>
            <TextBlock Text="{Binding Folder2}"/>
            <TextBlock Text="{Binding Results}"/>
            <TabControl Background="Transparent">
                <TabItem Header="Files that are in both">
                    <local:UC_Files DataContext="{Binding LV_Both}"/>
                </TabItem>
                <TabItem Header="Files that are in the first folder tree">
                    <local:UC_Files DataContext="{Binding LV_First}"/>
                </TabItem>
                <TabItem Header="Files that are in the second folder tree">
                    <local:UC_Files DataContext="{Binding LV_Second}"/>
                </TabItem>
            </TabControl>
        </StackPanel>
        <Grid Height="50" Visibility="{Binding ProgressbarVisibility}" VerticalAlignment="Center" HorizontalAlignment="Stretch">
            <ProgressBar IsIndeterminate="True" VerticalAlignment="Bottom"/>
        </Grid>
        <TextBlock Visibility="{Binding NoResultsVisibility}" TextAlignment="Center" VerticalAlignment="Center" TextWrapping="WrapWithOverflow">
            <Run Text="{Binding NoResultsFolder, Mode=OneWay}" FontWeight="SemiBold" Foreground="AntiqueWhite"/>
            <LineBreak/>
            <Run>No results</Run>
        </TextBlock>
    </Grid>
</local:LocalUserControlBase>
