<local:LocalWindow x:Class="DoubleFile.WinFileHash_Detail"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:DoubleFile"
        Title="Duplicate Files" Height="500" Width="500">
    <Grid Name="form_grid">
        <Menu IsMainMenu="True" Grid.ColumnSpan="999" Grid.RowSpan="999"/>  <!--sets content background-->
        <ListView Name="form_lv" Margin="10,10,10,10">
            <ListView.View>
                <GridView>
                    <GridViewColumn DisplayMemberBinding="{Binding Header}" Width="{Binding WidthHeader}"/>
                    <GridViewColumn DisplayMemberBinding="{Binding Detail}" Width="{Binding WidthDetail}"/>
                </GridView>
            </ListView.View>
        </ListView>
    </Grid>
</local:LocalWindow>
