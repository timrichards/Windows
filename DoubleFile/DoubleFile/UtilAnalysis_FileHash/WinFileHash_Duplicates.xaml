<local:LocalWindow x:Class="DoubleFile.WinFileHash_Duplicates"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:DoubleFile"
        Title="Duplicate Files" Height="250" Width="1000"  WindowStyle="ToolWindow">
    <Grid Name="form_grid">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="Auto"/>
        </Grid.ColumnDefinitions>
        <ListView Name="form_lv" Margin="0,0,0,0" Grid.Column="0" SelectedItem="{Binding SelectedItem}">
            <ListView.View>
                <GridView>
                    <GridViewColumn Header="File name" DisplayMemberBinding="{Binding Filename}" Width="{Binding WidthFilename}"/>
                    <GridViewColumn Header="Path" DisplayMemberBinding="{Binding Path}" Width="{Binding WidthPath}"/>
                </GridView>
            </ListView.View>
        </ListView>
        <!--<Button Command="{Binding Icmd_Goto}" Content="Go To" Margin="0,0,10,10" Grid.Column="1" Width="70" VerticalAlignment="Bottom" HorizontalAlignment="Right"/>-->
    </Grid>
</local:LocalWindow>
