<local:LocalWindow_DoubleFile x:Class="DoubleFile.WinTreeMap"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:DoubleFile"
        xmlns:localLocal="clr-namespace:Local"
        Title="Double File" Width="300" Height="250">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="Auto"/>
        </Grid.ColumnDefinitions>
        <WindowsFormsHost Name="_host" Grid.Column="0" HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
            <localLocal:UC_TreeMap x:Name="form_ucTreeMap" />
        </WindowsFormsHost>
        <Slider Grid.Column="1" Value="{Binding Value}" Ticks="{Binding Ticks}" Maximum="{Binding Maximum}"
                IsSnapToTickEnabled="True" TickFrequency="1" TickPlacement="TopLeft" Orientation="Vertical"/>
    </Grid>
</local:LocalWindow_DoubleFile>
