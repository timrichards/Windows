<local:LocalWindow_DoubleFile x:Class="DoubleFile.WinTreeMap"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:DoubleFile"
        Title="Double File" Width="415" Height="400">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition Width="Auto"/>
        </Grid.ColumnDefinitions>
        <WindowsFormsHost Name="_host" Grid.Column="0" HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
            <local:UC_TreeMap x:Name="form_ucTreeMap" />
        </WindowsFormsHost>
        <Slider Grid.Column="1" Value="{Binding Value}" Maximum="{Binding Maximum}"
                IsSnapToTickEnabled="True"
                LargeChange="1" SmallChange="1" TickFrequency="1"
                TickPlacement="TopLeft" Orientation="Vertical"
                Delay="200"/>
    </Grid>
</local:LocalWindow_DoubleFile>
