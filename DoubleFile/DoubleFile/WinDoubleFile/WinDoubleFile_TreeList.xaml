<local:LocalWindow_DoubleFile x:Class="DoubleFile.WinDoubleFile_TreeList"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:DoubleFile"
        Title="Double File" Width="600" Height="250">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="1*"/>
        </Grid.ColumnDefinitions>
        <Grid.Resources>
            <Style TargetType="ListViewItem">
                <Setter Property="Foreground" Value="{Binding Foreground}"/>
                <Setter Property="Background" Value="{Binding Background}"/>
            </Style>
        </Grid.Resources>
        <ListView Grid.Column="0" Name="form_lvSiblings" SelectedItem="{Binding SelectedItem}">
            <ListView.View>
                <GridView>
                    <GridViewColumn Header="Sibling folders" DisplayMemberBinding="{Binding Folder}" Width="{Binding WidthFolder}"/>
                </GridView>
            </ListView.View>
        </ListView>
        <ListView Grid.Column="1" Name="form_lvChildren" SelectedItem="{Binding SelectedItem}">
            <ListView.View>
                <GridView>
                    <GridViewColumn Header="Subfolders" DisplayMemberBinding="{Binding Folder}" Width="{Binding WidthFolder}"/>
                </GridView>
            </ListView.View>
        </ListView>
    </Grid>
</local:LocalWindow_DoubleFile>
