<local:LocalUserControlBase x:Class="DoubleFile.WinDoubleFile_TreeList_MUI"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:DoubleFile"
                            Title="Tree List">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <DataGrid Grid.Column="0" Name="formLV_Siblings" SelectedItem="{Binding SelectedItem}">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Sibling folders" Binding="{Binding Folder}" Width="{Binding WidthFolder}"/>
            </DataGrid.Columns>
        </DataGrid>
        <DataGrid Grid.Column="1" Name="formLV_Children" SelectedItem="{Binding SelectedItem}">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Folders here" Binding="{Binding Folder}" Width="{Binding WidthFolder}"/>
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</local:LocalUserControlBase>
